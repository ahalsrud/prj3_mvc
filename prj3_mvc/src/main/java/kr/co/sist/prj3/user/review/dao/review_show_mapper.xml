<!--게시글 내용 -->
<select id="selectReviewInfo" resultType="reviewInfo" parameterType="int">
select	  r.TITLE, r.INPUT_DATE, r.HITS, r.CONTENT , r.USER_ID  , u.PROFILE, u.PROFILE_MSG  , m.m_title
from      review r, user_table u, movie m
where     r.user_id = u.user_id and  r.m_num = m.m_num and r.rv_num = #{rv_num};
</select>

